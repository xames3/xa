{% block video %}
    <figure class="site-media site-media--video">
        <div class="site-media__frame">
            <video class="site-media__video"
                   width="auto"
                   height="auto"
                   controls>
                <source src="{{ url }}"
                        type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
        {%- if caption %}
            <figcaption class="site-media__caption">{{ caption }}</figcaption>
        {%- endif -%}
    </figure>
{% endblock video %}
