{% block picture %}
    <figure class='{{ figclass | join(" ") }}{{ " align-" + align if align else "" }}'>
        <img :src="darkMode === 'dark' || (darkMode === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches) ? '{{ dark }}' : '{{ light }}'"
             alt="{{ alt }}" />
        {% if caption %}
            <figcaption>
                <p>
                    <span class="caption-text">{{ caption }}</span>
                </p>
            </figcaption>
        {% endif %}
    </figure>
{% endblock picture %}

