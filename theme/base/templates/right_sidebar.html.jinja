       class="site-layout__sidebar site-sidebar site-sidebar--secondary">
    {%- block toc_before %}{%- endblock -%}
        {% if meta and not (meta.hiderightsidebar|tobool == true) and toc.strip() %}
            <p class="site-sidebar__title">{{ secondary_toctree_title }}</p>
            {{ toc }}
        {% endif %}
        {%- block toc_after %}{%- endblock -%}
        </aside>
